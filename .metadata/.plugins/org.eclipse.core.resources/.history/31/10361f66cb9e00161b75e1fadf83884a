public class mainlp302 {

	public static void main(String[] args) {
		writeChars('=',20);
	    System.out.println();
	    for (int i=1; i<=10; i++) {
	      writeChars('>',i);
	      writeChars(' ', 20 - 2*i);
	      writeChars('>',i);
	      System.out.println("");
	    }
	    
	    // drawW();
	    
	    // drawMultipleW ( 2);
	}
	
	
	// this writes any char, passes as ch, any number of times, passes as number.    
    public static void writeChars (char ch, int number) {
        
        for (int i = 1; i <= number; i++) {
          System.out.print(ch);
        }
      }
    
    
    // hacking the original V from the main block to draw something else
    public static void drawW () {
   
	    System.out.println();
	    for (int i=1; i<=10; i++) {
	      writeChars('>',i); 
	      writeChars(' ', 20 - 2*i);
	      writeChars('>',i);
	      writeChars('>',i); 
	      writeChars(' ', 20 - 2*i);
	      writeChars('>',i);

	      System.out.println("");	
	    }
    }
    
    // lets draw W's over and over again with one method that takes,
    //as a parameter, the number of times we want to draw a W
    
    public static void drawMultipleW (int wcount) {
    	
    	for (int j=1; j<=wcount; j++ ){
		    System.out.println();
		    for (int i=1; i<=10; i++) {
		      writeChars('>',i); 
		      writeChars(' ', 20 - 2*i);
		      writeChars('>',i);
		      writeChars('>',i); 
		      writeChars(' ', 20 - 2*i);
		      writeChars('>',i);
	
		      System.out.println("");	
		    }
    	}
    }

}